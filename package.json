{
  "name": "@sinandsean/react-native-wheel-picker",
  "version": "0.1.0",
  "description": "A high-performance native wheel picker for React Native with smooth scrolling, haptic feedback, and customizable styling",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "ios",
    "android",
    "react-native-wheel-picker.podspec",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!ios/build",
    "!android/build"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "clean": "del-cli lib android/build ios/build"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "wheel-picker",
    "picker",
    "scroll-picker",
    "native-picker",
    "haptic-feedback"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinandsean/react-native-wheel-picker.git"
  },
  "author": "sinandsean <dev@sinandsean.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sinandsean/react-native-wheel-picker/issues"
  },
  "homepage": "https://github.com/sinandsean/react-native-wheel-picker#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.74.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "react": "^18.2.0",
    "react-native": "^0.74.0",
    "react-native-builder-bob": "^0.23.0",
    "release-it": "^17.0.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.68.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    }
  }
}
